#header
  text-shadow 0 0 1px #fff
  margin 50px auto
  @media screen and (max-width: 900px)
    margin 20px auto 0
  
  a
    color #999
    @media screen and (max-width: 900px)
      display: block
      padding: 0
      text-align: center
    &:hover
      color color-link
      text-decoration none
    
  h1
    font-weight normal
    font-size 2.5em
    line-height 1

  h2
    font-weight normal
    font-size 0.9em
    line-height 1
    margin-top 10px
  
  #main-nav
    font-family font-title
    line-height 2.5em
    @media screen and (max-width: 900px)
      width: 100%
      margin: 10px 0
      box-shadow 1px 2px 3px #ddd
      background #fff
      
    ul
      list-style none
      li
        float left
        margin-left 30px
        @media screen and (max-width: 900px)
          margin: 0
          width: 25%