#footer
  color color-meta
  margin-bottom 50px
  font 0.9em/1.6 font-title
  text-shadow 0 0 1px #fff

.links
  border-top: 1px solid #ddd
  padding: 20px 0

  a
    padding: 0 20px

#return-top
  position: fixed
  right: 20px
  bottom: 20px
  width: 40px
  height: 40px
  line-height: 40px
  text-align: center
  text-decoration: none
  background: rgba(0, 0, 0, 0.5)
  color: #fff

  &:hover
    text-decoration: none

  i
    font-size: 30px
    font-style: normal

.icon-arrow-up
  &:before
    content '\f062'
    font-family font-icon
