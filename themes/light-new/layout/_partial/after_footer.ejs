  $('.fancybox').fancybox();
})(jQuery);
</script>
<% } %>
<a id="return-top" href="#"><i class="icon-arrow-up"></i></a>

<script>
$(function () {
  var topbtn = $('#return-top').hide();
  $(window).on('scroll', function () {
    var scrollTop = $(window).scrollTop();
    if (scrollTop > 200) {
        topbtn.fadeIn();
    }
    else {
        topbtn.fadeOut();
    }
  });
  topbtn.on('click', function () {
      $('html,body').animate({
          'scrollTop': 0
      });
      return false;
  });
});
</script>
